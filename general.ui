<?xml version="1.0" encoding="UTF-8"?>
<interface domain="thinkpad-battery-threshold@marcosdalvarez.org">
    <template class="GeneralPrefs" parent="AdwPreferencesPage">
        <property name="name">general</property>
        <property name="title" translatable="yes">General</property>
        <property name="icon-name">preferences-other-symbolic</property>
        <child>
            <object class="AdwPreferencesGroup" id="ui_group">
                <property name="title" translatable="yes">User interface</property>
                <child>
                    <object class="AdwComboRow" id="indicator_mode">
                        <property name="title" translatable="yes">Show indicator</property>
                        <property name="subtitle" translatable="yes">Set when the Icon tray should appear in Gnome tray</property>
                        <property name="model">indicator_mode_model</property>
                    </object>
                </child>
                <child>
                    <object class="AdwActionRow" id="color_mode_row">
                        <property name="title" translatable="yes">Colored icons theme</property>
                        <property name="subtitle" translatable="yes">Activate colored icons</property>
                        <property name="activatable-widget">color_mode</property>
                        <child>
                            <object class="GtkSwitch" id="color_mode">
                                <property name="valign">center</property>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="AdwActionRow" id="show_values_row">
                        <property name="title" translatable="yes">Show values</property>
                        <property name="subtitle" translatable="yes">Show current thresholds values</property>
                        <property name="activatable-widget">show_values</property>
                        <child>
                            <object class="GtkSwitch" id="show_values">
                                <property name="valign">center</property>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="AdwActionRow" id="show_notifications_row">
                        <property name="title" translatable="yes">Show notifications</property>
                        <property name="subtitle" translatable="yes">Show actions notifications</property>
                        <property name="activatable-widget">show_notifications</property>
                        <child>
                            <object class="GtkSwitch" id="show_notifications">
                                <property name="valign">center</property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </template>

    <object class="GtkStringList" id="indicator_mode_model">
        <items>
            <item translatable="yes">On active</item>
            <item translatable="yes">On inactive</item>
            <item translatable="yes">Always</item>
            <item translatable="yes">Never</item>
        </items>
    </object>
</interface>